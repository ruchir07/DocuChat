generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Chat {
  id        String    @id @default(uuid())
  name      String
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
  
  userId String?
  messages  Message[]
  files     File[]    @relation("ChatFiles") // ðŸ‘ˆ relation name
}

model Message {
  id        String   @id @default(uuid())
  chatId    String
  chat      Chat     @relation(fields: [chatId], references: [id])
  role      String // "user" | "assistant"
  content   String
  documents Json? // optional (for sources, PDF refs)
  createdAt DateTime @default(now())
}

model File {
  id        String   @id @default(uuid())
  filename  String
  path      String?
  createdAt DateTime @default(now())
  chatId    String
  chat      Chat     @relation("ChatFiles", fields: [chatId], references: [id])
}
